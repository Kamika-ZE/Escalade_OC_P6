<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!-- Datasource statement -->
    <bean id="abstractDataSource" abstract="true">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- DAO statement -->
    <bean id="climbingAreaDao" class="org.mickael.consumer.impl.dao.ClimbingAreaDaoImpl" parent="abstractDataSource"/>
    <bean id="commentDao" class="org.mickael.consumer.impl.dao.CommentDaoImpl" parent="abstractDataSource"/>
    <bean id="guidebookDao" class="org.mickael.consumer.impl.dao.GuidebookDaoImpl" parent="abstractDataSource"/>
    <bean id="photoDao" class="org.mickael.consumer.impl.dao.PhotoDaoImpl" parent="abstractDataSource"/>
    <bean id="reservationRequestDao" class="org.mickael.consumer.impl.dao.ReservationRequestDaoImpl" parent="abstractDataSource"/>
    <bean id="routeDao" class="org.mickael.consumer.impl.dao.RouteDaoImpl" parent="abstractDataSource"/>
    <bean id="sectorDao" class="org.mickael.consumer.impl.dao.SectorDaoImpl" parent="abstractDataSource"/>
    <bean id="memberDao" class="org.mickael.consumer.impl.dao.MemberDaoImpl" parent="abstractDataSource"/>


    <!-- DAO Factory -->
    <bean id="daoFactory" class="org.mickael.consumer.impl.DaoFactoryImpl">
        <property name="ClimbingAreaDao" ref="climbingAreaDao"/>
        <property name="CommentDao" ref="commentDao"/>
        <property name="GuidebookDao" ref="guidebookDao"/>
        <property name="PhotoDao" ref="photoDao"/>
        <property name="ReservationRequestDao" ref="reservationRequestDao"/>
        <property name="RouteDao" ref="routeDao"/>
        <property name="SectorDao" ref="sectorDao"/>
        <property name="MemberDao" ref="memberDao"/>
    </bean>

    <!-- ==== AbstractDao ===== -->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="org.mickael.consumer.impl.AbstractDataSource"/>
        <property name="targetMethod" value="setDataSource"/>
        <property name="arguments" ref="dataSource"/>
    </bean>
</beans>
