<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- DAO and Datasource statement -->
    <bean id="abstractDao" abstract="true" class="org.mickael.consumer.impl.AbstractDao">
        <property name="dataSource" ref="dataSource"/>
        <property name="namedParameterJdbcTemplate" ref="namedParameterJdbcTemplate"/>
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <!-- DAO statement -->
    <bean id="climbingAreaDao" class="org.mickael.consumer.impl.dao.ClimbingAreaDaoImpl" parent="abstractDao"/>
    <bean id="commentDao" class="org.mickael.consumer.impl.dao.CommentDaoImpl" parent="abstractDao"/>
    <bean id="guidebookDao" class="org.mickael.consumer.impl.dao.GuidebookDaoImpl" parent="abstractDao"/>
    <bean id="parkingDao" class="org.mickael.consumer.impl.dao.ParkingDaoImpl" parent="abstractDao"/>
    <bean id="photoDao" class="org.mickael.consumer.impl.dao.PhotoDaoImpl" parent="abstractDao"/>
    <bean id="reservationRequestDao" class="org.mickael.consumer.impl.dao.ReservationRequestDaoImpl" parent="abstractDao"/>
    <bean id="routeDao" class="org.mickael.consumer.impl.dao.RouteDaoImpl" parent="abstractDao"/>
    <bean id="sectorDao" class="org.mickael.consumer.impl.dao.SectorDaoImpl" parent="abstractDao"/>
    <bean id="startingPointDao" class="org.mickael.consumer.impl.dao.StartingPointDaoImpl" parent="abstractDao"/>
    <bean id="memberDao" class="org.mickael.consumer.impl.dao.MemberDaoImpl" parent="abstractDao"/>


    <!-- DAO Factory -->
    <bean id="daoFactory" class="org.mickael.consumer.impl.DaoFactoryImpl">
        <property name="ClimbingAreaDao" ref="climbingAreaDao"/>
        <property name="CommentDao" ref="commentDao"/>
        <property name="GuidebookDao" ref="guidebookDao"/>
        <property name="ParkingDao" ref="parkingDao"/>
        <property name="PhotoDao" ref="photoDao"/>
        <property name="ReservationRequestDao" ref="reservationRequestDao"/>
        <property name="RouteDao" ref="routeDao"/>
        <property name="SectorDao" ref="sectorDao"/>
        <property name="StartingPointDao" ref="startingPointDao"/>
        <property name="MemberDao" ref="memberDao"/>
    </bean>

</beans>
